<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:id="@+id/splash_layout"
                xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/colorPrimary"
                tools:context="com.flimbis.tvmaze.SplashActivity">


    <TextView
        android:id="@+id/txt_splash"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="tvAmaze"
        android:textColor="#ffffff"
        android:textSize="40sp"
        android:textStyle="bold"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_splash"
        android:layout_centerInParent="true"
        android:text="http://api.tvmaze.com/shows"
        android:textColor="#ffffff"
        android:textSize="16sp"
        android:textStyle="italic"/>


</RelativeLayout>

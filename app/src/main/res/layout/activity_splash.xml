<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/defaultPrimary"
    tools:context="com.flimbis.tvmaze.SplashActivity">


    <TextView
        android:id="@+id/txt_splash"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="tvAmaze"
        android:layout_centerInParent="true"
        android:textColor="#ffffff"
        android:textSize="40sp"
        android:textStyle="bold"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="http://api.tvmaze.com/shows"
            android:layout_below="@+id/txt_splash"
            android:layout_centerInParent="true"
            android:textColor="#ffffff"
            android:textSize="16sp"
            android:textStyle="italic"/>



</RelativeLayout>
